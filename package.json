{
  "name": "reminder-web",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "npm run build && wrangler pages dev .svelte-kit/cloudflare --live-reload",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "deploy": "npm run build && wrangler pages deploy .svelte-kit/cloudflare",
    "tail": "wrangler pages deployment tail --project-name reminder-web",
    "build-cf-types": "wrangler types && mv worker-configuration.d.ts src/",
    "watch": "npm-watch",
    "svelte-check": "svelte-check",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240314.0",
    "@fontsource/fira-mono": "^4.5.10",
    "@neoconfetti/svelte": "^1.0.0",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-cloudflare": "^4.2.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vitest": "^0.28.0",
    "wrangler": "^3.34.2",
    "npm-watch": "^0.11.0",
    "date-fns": "^2.28.0",
    "cheerio": "1.0.0-rc.12"
  },
  "watch": {
    "check": {
      "patterns": [
        "src"
      ],
      "extensions": "js,ts,svelte",
      "runOnChangeOnly": true,
      "quiet": false
    },
    "build": {
      "patterns": [
        "src",
        ".env"
      ],
      "extensions": "js,ts,svelte",
      "runOnChangeOnly": true,
      "quiet": false
    },
    "test": {
      "patterns": [
        "src"
      ],
      "extensions": "js,ts,svelte",
      "runOnChangeOnly": true,
      "quiet": false,
      "legacyWatch": true,
      "ignore": "node_modules",
      "delay": 2000
    }
  }
}